@{ Layout = null; }
<html>
<head>
    <script src="@Url.Content("/lib/FusionCharts/FusionCharts.js")"></script>
    <script src="@Url.Content("/lib/FusionCharts/themes/fusioncharts.theme.fusion.js")"></script>
</head>
<body>
    <div>
        <div id="chartContainer">@Html.Raw(ViewData["Chart"])</div>
        <div id="eventInfo">Please try rotating the chart</div>
    </div>
    <script type="text/javascript">
        var OnRotationStart = function (eventObj) {

            document.getElementById("eventInfo").innerText = "You are rotating your charts!";
        };
        var OnRotationEnd = function (eventObj) {

            document.getElementById("eventInfo").innerText = "You have just stop rotating!";
        };
    </script>
</body>
</html>