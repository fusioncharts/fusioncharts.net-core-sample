@{ Layout = null; }
<html>
<head>
    <script src="@Url.Content("/lib/FusionCharts/FusionCharts.js")"></script>
    <script src="@Url.Content("/lib/FusionCharts/themes/fusioncharts.theme.fusion.js")"></script>
</head>
<body>
    <div>
        <div id="chartContainer">@Html.Raw(ViewData["Chart"])</div>
        <div id="eventInfo">Please click on a data plot</div>
    </div>
    <script>
        var OnDataPlotClick = function (eventObj) {

            var dataValue = eventObj.data.dataValue;
            var categoryLabel = eventObj.data.categoryLabel;

            document.getElementById("eventInfo").innerHTML = "category: " + categoryLabel + "\n" + "value: " + dataValue;
        };
    </script>
</body>
</html>